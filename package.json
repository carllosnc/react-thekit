{
  "name": "react-thekit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "format": "prettier --check ./src/**/*.{js,jsx,ts,tsx,css,md,json} --config ./.prettierrc",
    "format:fix": "prettier --write ./src/**/*.{js,jsx,ts,tsx,css,md,json} --config ./.prettierrc",
    "test:unit": "jest ./src/",
    "test:unit:watch": "jest --watch",
    "test:e2e": "npx playwright test",
    "test:e2e:ci": "start-server-and-test 'npm run start' http://localhost:3000 'npm run test:e2e'",
    "test:full": "npm run build && npm run test:unit && npm run lint && npm run format && npm run test:e2e:ci"
  },
  "dependencies": {
    "@fontsource/inter": "5.0.17",
    "framer-motion": "^11.0.8",
    "i18next": "23.10.1",
    "next": "14.1.3",
    "raw-loader": "4.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "14.1.0",
    "react-icons": "5.0.1",
    "react-lazy-load": "^4.0.1",
    "react-markdown": "9.0.1",
    "react-syntax-highlighter": "15.5.0",
    "remark-gfm": "4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "1.42.1",
    "@tailwindcss/typography": "0.5.10",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.1",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "18.2.64",
    "autoprefixer": "10.4.18",
    "babel-jest": "29.7.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.1.3",
    "eslint-plugin-playwright": "1.5.2",
    "eslint-plugin-testing-library": "6.2.0",
    "identity-obj-proxy": "3.0.0",
    "intersection-observer": "^0.12.2",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "postcss": "8.4.35",
    "postcss-import": "16.0.1",
    "prettier": "3.2.5",
    "react-test-renderer": "18.2.0",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "3.4.1",
    "ts-node": "10.9.2",
    "typescript": "5.4.2"
  }
}
