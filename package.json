{
  "name": "react-thekit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "format": "prettier --check ./src/**/*.{js,jsx,ts,tsx,css,md,json} --config ./.prettierrc",
    "format:fix": "prettier --write ./src/**/*.{js,jsx,ts,tsx,css,md,json} --config ./.prettierrc",
    "test:unit": "jest ./src/",
    "test:unit:watch": "jest --watch",
    "test:e2e": "npx playwright test",
    "test:e2e:ci": "start-server-and-test 'npm run start' http://localhost:3000 'npm run test:e2e'",
    "test:full": "npm run build && npm run test:unit && npm run lint && npm run format && npm run test:e2e:ci"
  },
  "dependencies": {
    "@fontsource/inter": "5.1.0",
    "framer-motion": "^11.15.0",
    "i18next": "24.2.0",
    "next": "15.1.2",
    "raw-loader": "4.0.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-i18next": "15.2.0",
    "react-icons": "5.4.0",
    "react-lazy-load": "^4.0.1",
    "react-markdown": "9.0.1",
    "react-syntax-highlighter": "15.6.1",
    "remark-gfm": "4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "1.49.1",
    "@tailwindcss/typography": "0.5.15",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "19.0.2",
    "autoprefixer": "10.4.20",
    "babel-jest": "29.7.0",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.2",
    "eslint-plugin-playwright": "2.1.0",
    "eslint-plugin-testing-library": "7.1.1",
    "identity-obj-proxy": "3.0.0",
    "intersection-observer": "^0.12.2",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "postcss": "8.4.49",
    "postcss-import": "16.1.0",
    "prettier": "3.4.2",
    "react-test-renderer": "19.0.0",
    "start-server-and-test": "^2.0.9",
    "tailwindcss": "3.4.17",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  }
}
